@page "/addAdult"

@using FamiliesManager.Data
@using FamiliesManager.Models

@inject IAdultService AdultService
@inject NavigationManager NavigationManager

<h3>Add New Adult</h3>

<EditForm Model="@newAdult" OnValidSubmit="@AddNewAdult">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        First Name: <br/>
        <InputText @bind-Value="newAdult.FirstName" />
    </div>
    <div class="form-group">
        Last Name: <br/>
        <InputText @bind-Value="newAdult.LastName"/>
    </div>
    <div class="form-group">
        Age: <br/>
        <InputNumber @bind-Value="newAdult.Age" />
    </div>
    <div class="form-group">
        Sex: <br/>
        <select class="custom-select" @bind="newAdult.Sex" style="width: 100px">
            <option selected value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </div>
    <div class="form-group">
        Eye color: <br/>
        <select class="custom-select"  @bind="newAdult.EyeColor" style="width: 100px">
            <option>Amber</option>
            <option>Blue</option>
            <option selected>Brown</option>
            <option>Gray</option>
            <option>Green</option>
            <option>Hazel</option>
            <option>Red</option>
        </select>
    </div>
    <div class="form-group">
        Hair color: <br/>
        <select class="custom-select"  @bind="newAdult.HairColor" style="width: 100px">
            <option selected>Brown</option>
            <option>Black</option>
            <option>Blond</option>
            <option>Blue</option>
            <option>Green</option>
            <option>Orange</option>
            <option>Red</option>
            <option>Pink</option>
            <option>Purple</option>
            <option>Sandy</option>
            <option>White</option>
            <option>Bald</option>
        </select>
    </div>
    <div class="form-group">
        Weight: <br/>
        <InputNumber @bind-Value="newAdult.Weight" /> 
        kg
    </div>
    <div class="form-group">
        Height: <br/>
        <InputNumber @bind-Value="newAdult.Height" /> 
        cm
    </div>
    <div class="form-group">
        Job Title: <br/>
        <InputText @bind-Value="Job.JobTitle"/>
    </div>
    <div class="form-group">
        Salary: <br/>
        <InputNumber @bind-Value="Job.Salary"/> 
        dkk/month
    </div>
    
    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
    
</EditForm>

@code {
    private Adult newAdult = new()
    {
        Sex = "M",
        EyeColor = "Brown",
        HairColor = "Brown"
    };
    private Job Job = new();

    private void AddNewAdult()
    {
        newAdult.JobTitle = Job;
        AdultService.Create(newAdult);
        NavigationManager.NavigateTo("/adults");
    }
}